<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block", class:"mt-4" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :address, style: "display: block", class:"mt-4" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div>
    <%= form.number_field :user_id, id: :story_user_id, value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.label :content, style: "display: block", class:"mt-4" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <%= form.label :image, class:"mt-4" %>
  <%= form.file_field :image, class: "form-control" %>

  <div>
    <%= form.submit class:"btn btn-success mt-4" %>
  </div>
<% end %>
