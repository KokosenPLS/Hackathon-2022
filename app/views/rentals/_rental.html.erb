
  <div class="col" id="<%= dom_id rental %>">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= rental.product.title %></h5>
        <p class="card-text"><%= rental.product.content %></p>
        <p class="card.text">Rental start: <%= rental.start_date %></p>
        <p class="card.text">Rental end: <%= rental.start_date %></p>
        <% if rental.user == current_user and rental.active? %>
          <%= button_to "Mark this rental as done", rental_done_path(rental), method: :post , class:"btn btn-success"%>

        <% end %>

        <% if rental.done? %>
          <p class="text-muted">Marked as done <%= time_ago_in_words rental.updated_at %> ago</p>
        <% end %>

      </div>
    </div>
  </div>

