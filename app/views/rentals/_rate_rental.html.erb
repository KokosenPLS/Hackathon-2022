<div class="container-fluid d-flex flex-column text-center">
  <h3 class="mt-3">Hope you enjoyed your stay!</h3>
  <h6 class="mt-3">How would you rate your stay?</h6>

  <div class="d-flex flex-row justify-content-center mt-4">
    <%= button_to dislike_path(rental), method: :post, hidden:true do %>
      <button type="submit" class="btn btn-danger mx-3" data-bs-toggle="modal" data-bs-target="#modal">
      <span class="material-icons">
        thumb_down
      </span>
      </button>
    <% end %>

    <%= button_to like_path(rental), method: :post, hidden:true do %>
      <button type="submit" class="btn btn-success mx-3" data-bs-toggle="modal" data-bs-target="#modal">
      <span class="material-icons">
        thumb_up
      </span>
      </button>
    <% end %>
  </div>

</div>